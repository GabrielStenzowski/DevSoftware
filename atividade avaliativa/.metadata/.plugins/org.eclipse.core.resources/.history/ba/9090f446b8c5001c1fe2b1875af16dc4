import java.io.File;
import java.io.FileNotFoundException;
import java.util.Formatter;
import java.util.Scanner;




public class programa {
	public static void main(String[] args) {
		
		Scanner leitor = getLeitor();
		if (leitor = null) 
		{
			System.out.println("Nao é possivel executar!!!!");
		}
		else
		{
			Grupo[] grupos = carregardados(leitor);
			
			gravarRelatorio(grupos);
		}
		
		System.out.println("Deu bom demais!!!!");
	}
	
	public static void gravarRelatorios(Grupos[] grupos)
		try 
		{
			Formatter gravador = new Formatter("C:\\Users\\Aluno\\Desktop\\atividade avaliativa\\Ex2\\src\\relatorio-de-grupos.txt");
		
		int vlrTotal = 0;
		for (int i = 0; i < grupos.length; i++) {
			Grupo grp = grupos[i]; 
			gravador.format("Valor do grupo: " + grp.letra + ": " + grp.getValor() + "\n");
			
			vlrTotal += grp.getValor();			
		}
		gravador.format("Valor total: " + vlrTotal);
		
		gravador.close();
		
		}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}

